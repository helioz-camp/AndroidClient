<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activityMainLayout"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.helioz.androiddrumclient.MainActivity">

    <com.helioz.androiddrumclient.InstrumentSwitcherView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".20"
        android:id="@+id/instrumentSwitcherView"
        android:background="@color/red">
    </com.helioz.androiddrumclient.InstrumentSwitcherView>

    <com.helioz.androiddrumclient.DrumView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".80"
        android:id="@+id/drumView"
        android:background="@color/red">
    </com.helioz.androiddrumclient.DrumView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:text="Helioz!" />
</LinearLayout>
