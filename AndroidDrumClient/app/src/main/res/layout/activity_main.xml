<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activityMainLayout"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.helioz.androiddrumclient.MainActivity">

    <com.helioz.androiddrumclient.InstrumentSwitcherView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".10"
        android:id="@+id/instrumentSwitcherView1"
        android:text="Swipe left or right to change sounds"
        android:background="@color/black">
    </com.helioz.androiddrumclient.InstrumentSwitcherView>

    <com.helioz.androiddrumclient.DrumView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".40"
        android:id="@+id/drumView1"
        android:background="@color/red">
    </com.helioz.androiddrumclient.DrumView>

    <com.helioz.androiddrumclient.InstrumentSwitcherView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".10"
        android:id="@+id/instrumentSwitcherView2"
        android:text="Swipe left or right to change sounds"
        android:background="@color/black">
    </com.helioz.androiddrumclient.InstrumentSwitcherView>

    <com.helioz.androiddrumclient.DrumView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".40"
        android:id="@+id/drumView2"
        android:background="@color/red">
    </com.helioz.androiddrumclient.DrumView>

</LinearLayout>
